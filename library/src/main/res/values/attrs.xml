<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RealmRecyclerView">
        <attr name="rrvIsRefreshable" format="boolean"/>
        <attr name="rrvEmptyLayoutId" format="reference"/>
        <attr name="rrvLayoutType">
            <enum name="LinearLayout" value="0"/>
            <enum name="Grid" value="1"/>
            <enum name="LinearLayoutWithHeaders" value="2"/>
            <enum name="StaggeredGridLayout" value="3"/>
        </attr>
        <attr name="rrvGridLayoutSpanCount" format="integer"/>
        <attr name="rrvGridLayoutItemWidth" format="dimension"/>
        <attr name="rrvHeaderColumnName" format="string"/>
        <attr name="rrvSwipeToDelete" format="boolean"/>
        <attr name="srl_direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwipyRefreshLayout">
        <attr name="srlmain_direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>

</resources>